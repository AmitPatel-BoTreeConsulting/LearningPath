<section class="wrapper">
  <div class="row mt">
    <div class="col-lg-1 col-md-1 "></div>
    <div class="col-lg-8 col-md-8 col-sm-12">
    <% @links.each do |link| %>
      <div class="showback" >
        <div class="left"><i class="fa fa-video-camera"></i><br/><e>11</e></div><p>
        <%= link_to "#{link.title}", link.url, html: { target: "_blank"}%></p>
        <span>
          <i class="fa fa-heart-o"></i>
          <%= link_to edit_link_path(link) do%>
            <i class="fa fa-edit" style="text-decoration: none"></i>
          <%end%>
          <%= link_to link_path(link), method: 'delete', data: { confirm: 'Are you sure? Do you want to delete?'} do%>
            <i class="fa fa-trash-o" ></i>
          <%end%>
          <i class="fa fa-eye"></i>
        </span>
        <div class="description">
          <%= link.description%>
        </div><br/>
        <div class="tag">
          <% link.tags.each do |tag| %>
            <%= link_to tag.name, links_path(tag: tag.name), class: "btn btn-sm btn-theme" %>
          <% end %>
        </div>
      </div><!-- /showback -->
    <% end %>
  </div><!--/ row -->
</section><!-- --/wrapper ---->


