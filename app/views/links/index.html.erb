<section class="wrapper">
  <div class="row mt">
    <div class="col-lg-1 col-md-1 ">
      <%= link_to 'chart', chart_by_learn_path %>
    </div>
    <div class="col-lg-8 col-md-8 col-sm-12">
      <% @links.each do |link| %>
        <div class="showback" >
          <div class="left"><i class="fa fa-video-camera"></i><br/><e>11</e></div>
          <p>
            <%= link_to "#{link.title}", link.url, html: { target: "_blank"}%></p>
          <span>
            <i class="fa fa-heart-o"></i>
            <%= link_to edit_link_path(link) do%>
              <i class="fa fa-edit" style="text-decoration: none"></i>
            <%end%>
            <%= link_to link_path(link), method: 'delete', data: { confirm: 'Are you sure? Do you want to delete?'} do%>
              <i class="fa fa-trash-o" ></i>
            <%end%>
              <%= link_to '', learn_time_path(link.id), class: "fa fa-eye" %>
          </span>
          <div class="description">
            <%= link.description%>
          </div><br/>
          <div class="tag">
            <% link.tags.each do |tag| %>
              <%= link_to tag.name, links_path(tag: tag.name), class: "btn btn-sm btn-theme" %>
            <% end %>
          </div>
        </div><!-- /showback -->
      <% end %>
    </div>
    <div class="col-lg-2 col-md-2">
      <%= link_to '', new_link_path, class: "fa fa-plus btn btn-lg btn-round btn-success", title: 'Add Link' %>
    </div>
  </div><!--/ row -->
</section><!-- --/wrapper ---->
