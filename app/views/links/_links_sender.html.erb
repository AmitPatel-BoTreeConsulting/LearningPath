<%= javascript_include_tag 'links' %>
<section class="wrapper">
  <%= button_tag "Send", class:'my_modal btn btn-primary'%>
  <div class="spacer20"></div>
  <div id="myModal" class="modal fade">
    <div class="modal-dialog">
      <%= hidden_field_tag :selected_links, :value => id_arr %>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Please Select Contacts</h4>
        </div>
        <div class="modal-body">
          <%= render partial: 'links/choose_option', locals: {contacts: contacts, groups: groups} %>

          <p class="text-warning"><small>Choose contacts to whome you want to share your links...</small></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary contact_select">Send</button>
        </div>
      </div>
    </div>
  </div>

  <% selected_links.each do |link| %>
    <div class="showback" >
      <div class="left">
        <i title= "<%= link.link_type.name %>" class='<%= "#{set_category_icon(link)}" %>'></i><br/>
      </div>
      <p>
        <%= link_to "#{link.title}", link.url, target: '_blank'%>
      </p>

      <div class="description">
        <div class="truncate_desc<%=link.id%>"><%= truncate(simple_format(link.description), length: 200, escape: false) {link_to "More", 'javascript:void(0)', id: "#{link.id}", class:"view_desc_more view_toggle_font" } %></div>
        <div class=" truncate_desc_show<%=link.id%> hide_me"><%= simple_format(link.description)%><%= link_to "Less", 'javascript:void(0)', id: "#{link.id}", class:"view_desc_less #{link.id} view_toggle_font" %></div>
      </div><br/>
      <div>
        <div class="tag"></div>
        <div class="btn-group btn-link-menu" id="<%="btn_group#{link.id}"%>"></div>
      </div>
    </div><!-- /showback -->
  <% end %>
</section>