<%= form_for @link, html: { class: "form-horizontal style-form" } do |f|%>
  <div class="form-group">
    <%= f.label :url, class: "col-sm-1 col-sm-1 control-label" do %>
      Url
      <span class="mandatory">*</span>
    <% end %>
    <div class="col-sm-11">
      <%= f.text_field :url, class: 'form-control'%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-1 col-sm-1 control-label" do %>
      Title
      <span class="mandatory">*</span>
    <% end %>
    <div class="col-sm-11">
      <%= f.text_field :title, class: 'form-control'%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "col-sm-1 col-sm-1 control-label" %>
    <div class="col-sm-11">
      <%= f.text_area :description, class: 'form-control'%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Tags, class: "col-sm-1 col-sm-1 control-label" %>
    <div class="col-sm-11">
      <%= f.select :tag_list, options_for_select(@tags.map(&:name), selected: @link.tags),{},multiple: true, prompt: false, id: 'form-field-select-4', class: 'chzn-drop instructor-chosen-select chosen-select form-control', data: { placeholder: '' } %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :Type, class:"col-sm-1 col-sm-1 control-label" do %>
      Link Type
      <span class="mandatory">*</span>
    <% end %>
    <div class="col-sm-5">
      <%= f.select :link_type_id, options_from_collection_for_select(@link_types, 'id', 'name', @link.link_type_id), {}, { class: 'form-control'} %>
    </div>
    <%= f.label :Category, class:"col-sm-1 col-sm-1 control-label" %>
    <div class="col-sm-5">
      <%= f.select :category_id, options_from_collection_for_select(@categories, 'id', 'name', @link.category_id), {prompt: 'Select Category'},{ class: 'form-control'} %>
    </div>
  </div>
  <div class="form-group">
  <span class="col-sm-1 col-sm-1 control-label" ></span>
  <div class="col-sm-1 col-sm-1 control-label">
    <%= f.submit :save, class: 'btn btn-success btn-md', data: {disable_with: 'Saving...'} %>
  </div>
  <div class="col-sm-1 col-sm-1 control-label">
    <%= link_to "Cancel", root_path, class: 'btn btn-default' %>
  </div>
    </div>
<%end%>

<script>
  var config = {
    '.chosen-select'           : {},
    '.chosen-select-deselect'  : {allow_single_deselect:true},
    '.chosen-select-no-single' : {disable_search_threshold:10},
    '.chosen-select-no-results': {no_results_text:'Oops, nothing found!'},
    '.chosen-select-width'     : {width:"95%"}
  }
  for (var selector in config) {
    $(selector).chosen(config[selector]);
  }
</script>
