<section class="wrapper ">
  <div class="row mt">
    <div class="col-lg-3 col-md-3"></div>
    <div class="col-lg-6 col-md-6 col-sm-10 ">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-login form-panel'}) do |f| %>
  <h2 class="form-login-heading">Sign Up</h2>
  <div class="login-wrap">
    <%= devise_error_messages! %>
    <div class="field">
      <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: 'Name' %>
    </div>
    <div class="spacer20"></div>
    <div class="field">
      <%= f.email_field :email, class: "form-control", placeholder: 'Email' %>
    </div>
    <div class="spacer20"></div>
    <div class="field">
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: 'Password' %>
    </div>
    <div class="spacer20"></div>
    <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: 'Retype Password' %>
    </div><br/>
    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-theme btn-block"  %>
    </div>
    <hr />
    <div class="registration">
        <%= render "users/shared/links" %>
    </div>
  </div>
<% end %>
    </div>
  </div><!--/ row -->
</section><!-- --/wrapper ---->
