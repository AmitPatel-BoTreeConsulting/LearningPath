<div class="row mt">
  <div class="col-lg-10 col-md-10 col-sm-10">
    <div class='form-panel mb'>
      <h4>
        <i class="fa fa-angle-right"></i>
        Current Groups
      </h4>
      <table class="table table-bordered">
        <thead>
        <th>Name</th>
        </thead>
        <% groups.each do |group| %>
          <tbody>
          <td><%=link_to group.name, group_path(group.id)%></td>
          <td>
            <%= link_to edit_group_path(group), remote: true, title:'Edit' do %>
              <i><span class="fa fa-pencil"></span></i>
            <% end %>
          </td>
          <td>
          <%= link_to group_path(group), method: 'delete',data: { confirm: 'Are you sure? Do you want to delete?'}, title:'Delete' do %>
            <i><span class="fa fa-trash-o"></span></i>
          <% end %>
            </td>

          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>