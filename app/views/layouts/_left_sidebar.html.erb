<aside>
  <div id="sidebar" class="nav-collapse " >
    <ul class="sidebar-menu" id="nav-accordion" >
      <li class="mt">
        <%= nav_link_to root_path do %>
          <i class="fa fa-dashboard"></i>
          <span> Links </span>
        <% end %>
      </li>
      <li>
        <%= nav_link_to favourite_links_path do %>
          <i class="fa fa-heart"></i>
          <span> Favourites </span>
        <% end %>
      </li>
      <li>
        <%= nav_link_to new_link_path do %>
          <i class="fa fa-plus"></i>
          <span> Add New Link </span>
        <% end %>
      </li>
      <li>
        <%= nav_link_to chart_by_learn_path do %>
          <i class="fa fa-bar-chart-o"></i>
          <span> Reports </span>
        <% end %>
      </li>
    </ul>
  </div>
</aside>

<script>
    $(document).ready(function(){
        $('.left_sidebar').click(function () {
            if ($('#sidebar > ul').is(":visible") === true) {
                $('#main-content').css({
                    'margin-left': '0px'
                });
                $('#sidebar').css({
                    'margin-left': '-210px'
                });
                $('#sidebar > ul').hide();
                $("#container").addClass("sidebar-closed");
            } else {
                $('#main-content').css({
                    'margin-left': '210px'
                });
                $('#sidebar > ul').show();
                $('#sidebar').css({
                    'margin-left': '0'
                });
                $("#container").removeClass("sidebar-closed");
            }
        });
    });
</script>