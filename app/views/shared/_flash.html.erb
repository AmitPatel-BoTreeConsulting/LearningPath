<% unless flash.empty? %>
  <div class="flash_msg" style="width: 100%; align-content: center; padding-top: 5%; font-size: 15px">
    <% flash.each do |name, message| %>
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <div class="text-center alert alert-<%= name %>">
        <ul>
          <% if message.is_a?Array%>
            <% message.each do |msg| %>
            <li> <%= msg %> </li>
            <% end %>
          <% else %>
           <li> <%= message%></li>
          <% end%>
        </ul>
      </div>
    <% end %>
  </div>
<% end %>
