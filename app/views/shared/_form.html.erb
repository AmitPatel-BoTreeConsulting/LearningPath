<div class="col-md-3"></div>
<div class="col-md-6">
<div style="font-size: 20px">New Link</div>
  <div class="spacer20"></div>
<div class="form-group">
<%=form_for @link do |f|%>
    <%= f.label :title %>

    <%= f.text_field :title, class: 'form-control'%>
    <div class="spacer20"></div>
    <%= f.label :url %>
    <%= f.text_field :url, class: 'form-control'%>
    <div class="spacer20"></div>
    <%= f.label :description %>:
    <%= f.text_area :description, class: 'form-control'%>
    <div class="col-md-6">
      <div class="spacer20"></div>
      <%= f.label :status %>:
      <%= f.select :status, options_for_select(['Unread', 'Read', 'Future-Read'], selected: @link.status),{},{ class: 'form-control'} %>
    </div>
    <div class="spacer20"></div>
    <div class="col-md-6">
       <%= f.label :category %>:
       <%= f.select :category, options_for_select(['Video','Podcast', 'BlogPost', 'Tutorial'],selected: @link.category),{},{ class: 'form-control'} %>
    </div>
    <div class="spacer70"></div>
<div >
    <%= f.submit :submit, class: 'btn btn-success btn-md' %>
  <%end%>
</div>
</div>
<div class="col-md-3"></div>